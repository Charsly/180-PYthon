# 错误调试
y = 1
x = 1

while y < 10 :
    
    while x < 10 :
        a = x * 10 + y
        b = y * 10 + x
        if a * 693 ==396 * b :
            print('当Y为',y,'时，X的数值是：',x)
        x = x + 1

    y = y + 1
