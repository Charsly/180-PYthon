import random

question = ['白日依山尽,黄河入海流',
            '所守或匪亲,化作狼与豺',
            '春风桃李花开日,秋雨梧桐叶落时',
            '冠盖满京华,斯人独憔悴',
            '会当凌绝顶,一览众山小',]

answer = ['王之涣','李白','白居易','杜甫','杜甫']

while 1==1 :

    i = random.randint(0,4)

    s = input('请输入' + question[ i ] +' 的作者：')

    if s == answer[ i ]:
        print('答对了！')
    else:
        print('唉，诗人死不瞑目啊.....再来一个吧')
